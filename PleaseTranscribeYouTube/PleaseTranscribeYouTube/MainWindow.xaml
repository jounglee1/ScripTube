<Window x:Class="PleaseTranscribeYouTube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PleaseTranscribeYouTube"
        xmlns:WPF="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls.WebView"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        AllowsTransparency="False"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <WPF:WebView
            x:Name="xWebView"
            Loaded="xWebView_Loaded"
            />
        <StackPanel
            Grid.Column="1"
            >
            <Button
                Content="start" Click="xButtonStart_Click"
                />
            <Button
                Content="pause" Click="xButtonPause_Click"
                />
            <Button
                Content="stop" Click="xButtonStop_Click"
                />
            <Button
                Content="getTime" Click="xButtonGetTime_Click"
                />
        </StackPanel>
    </Grid>
</Window>
